		// 한줄추가
		var iAddRp = this.ds_LayoutList.addRow();
		this.ds_LayoutList.setColumn(iAddRp, "PROGRAMID", this.paramNum);
		this.ds_LayoutList.setColumn(iAddRp, "GRIDID", this._getUniqueId(this.paramObj));
		this.ds_LayoutList.setColumn(iAddRp, "LAYOUT_NM", this.ds_in.getColumn(0, "LAYOUT_NM"));
		this.ds_LayoutList.setColumn(iAddRp, "DEFAULT_LAYOUT", this.ds_in.getColumn(0, "DEFAULT_LAYOUT"));
		this.ds_LayoutList.setColumn(iAddRp, "JSONDATA", this.paramObj.getCurFormatString());

		{
