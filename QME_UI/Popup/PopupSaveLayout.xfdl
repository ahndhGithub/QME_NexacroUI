/*++
@desc	Callback Function
*/
this.callbackFunction = function(strSvcID, nErrorCode, strErrorMsg)
{
							var gtrcPos = "PopupSaveLayout.xfdl.callbackFunction"
	// 에러 체크 영역
	if (nErrorCode < 0)
	{
		//	alert(this.gfn_removeJavaErrMsg(strErrorMsg));
		alert(strErrorMsg);
		return;
	}

	switch (strSvcID) 
	{
		default:
			break;
 		
		case "FormatSave"	:
									this.gtrace("transResult.xml---->"+this.ds_tranResult.saveXML(), gtrcPos);
				this.fn_reset();
									
				break;
 	}
}

