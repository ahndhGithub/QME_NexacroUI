/*++
@desc	포맷 가져오기
*/
this.tfn_FormatSearch = function(){

	{
		this.ds_inLayout.clearData();
		this.ds_inLayout.addRow();
		this.ds_inLayout.setColumn(0, "PROGRAMID", this.paramNum);
		this.ds_inLayout.setColumn(0, "GRIDID", this.paramObj.name);
		this.gfn_setUser(this.ds_inLayout, "USERID");
	}
	
	var sSvcID 			= "FormatSearch";
	//	var sURL 			= "AppSvr::common/commonAction.ppc";
	var sURL 			= "AppSvrLocalMsSql::CommonSaveAction_Return.do";
	var sInDatasets 	= "ds_in0=ds_inLayout";
	var sOutDatasets 	= "ds_LayoutList=ds_out0";
	//	var sArguments 		= "sqlId=" + nexacro.wrapQuote("PopupMapper.getSupplerPopup");
	var sArguments 		= "sqlId=" + nexacro.wrapQuote("formatSearch");

	//공통 트랜잭션 사용
	this.gfn_transaction(sSvcID, sURL, sInDatasets, sOutDatasets, sArguments, "callbackFunction");
}

/*++
@desc	포맷 저장
*/
this.tfn_FormatSave = function()
{

	if(!this.gfn_isNull(this.ds_in.getColumn(0, "LAYOUT_NM")))
	{	// 레이아웃명이 있다면 INSERT
		var bDfltLayout = this.ds_in.getColumn(0, "DEFAULT_LAYOUT");		trace("bDfltLayout--->"+bDfltLayout);
		if(bDfltLayout=="1")
		{	//INSERT가 디폴트인경우 : 기존 것들은 체크 해제
			for(var i=0;i<this.ds_LayoutList.rowcount;i++){
				if(this.ds_LayoutList.getColumn(i, "DEFAULT_LAYOUT")=="1"){
					this.ds_LayoutList.setColumn(i, "DEFAULT_LAYOUT", "0");
				}
			}
